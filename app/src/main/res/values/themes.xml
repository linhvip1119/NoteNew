<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Baseappandroid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blueOption</item>
        <item name="colorPrimaryVariant">@color/blueOption</item>
        <item name="colorOnPrimary">@color/blueOption</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueOption</item>
        <item name="colorSecondaryVariant">@color/blueOption</item>
        <item name="colorOnSecondary">@color/blueOption</item>
        <item name="colorPrimaryDark">@color/blueOption</item>
        <item name="colorAccent">@color/blueOption</item>
        <item name="android:itemBackground">@color/neutral0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blueOption</item>
    </style>

    <style name="Theme.Baseappandroid" parent="Base.Theme.Baseappandroid" />

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/material_on_primary_emphasis_high_type</item>
        <item name="colorSwitchThumbNormal">@color/neutral100</item>
        <item name="android:colorForeground">@color/neutral400</item>
    </style>

    <style name="mybuttonbar" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:background">@color/neutral500</item>
    </style>

    <style name="ThemeOverlay.AppTheme.BottomNavigationView" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="elevationOverlayEnabled">true</item>
        <item name="itemIconTint">@color/custom_color_bottom_nav</item>
        <item name="tabIconTint">@color/custom_color_bottom_nav</item>
        <item name="colorSurface">@color/custom_color_bottom_nav</item>
    </style>

    <style name="MyDatePickerStyle2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorOnPrimary</item>
        <!--selected Item color-->
        <item name="colorControlActivated">?attr/colorOnPrimary</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/neutral0</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">?attr/colorOnPrimary</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/neutral0</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/neutral500</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@android:color/white</item>

    </style>

    <style name="MyPopupOtherStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/neutral500</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@drawable/bg_view_reminder</item>
    </style>

    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dp4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/neutral50038</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:checkedTextViewStyle">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BasePopupOptionMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dp4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/neutral500</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:checkedTextViewStyle">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.Baseappandroid.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Baseappandroid.AppWidgetContainer" parent="Theme.Baseappandroid.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

