<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_radius_top"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/ivInstruct"
        app:tabGravity="center"
        app:tabIndicator="@drawable/bg_select_category"
        app:tabIndicatorColor="@color/primary_current"
        app:tabIndicatorFullWidth="true"
        app:tabInlineLabel="true"
        app:tabMode="scrollable"
        app:tabSelectedTextAppearance="@style/TextSelected"
        app:tabSelectedTextColor="@color/primary_current"
        app:tabTextAppearance="@style/TextUnSelected"
        app:tabTextColor="@color/neutral500" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

</androidx.appcompat.widget.LinearLayoutCompat>