<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Baseappandroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <attr name="themeColor" format="color" />

    <style name="MyDatePickerStyle2" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorOnPrimary</item>
        <!--selected Item color-->
        <item name="colorControlActivated">?attr/colorOnPrimary</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/neutral100</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">?attr/colorOnPrimary</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/neutral100</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/neutral500</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@android:color/white</item>

    </style>

    //custom theme

    <style name="coolPrimaryNav" parent="Theme.MaterialComponents.Light">
        <item name="themeColor">@color/primaryOption</item>
        <item name="colorPrimary">@color/primaryOption</item>
        <item name="colorPrimaryVariant">?attr/themeColor</item>
        <item name="colorOnPrimary">@color/primaryOption</item>
        <item name="colorSecondary">?attr/themeColor</item>
        <item name="colorPrimaryDark">@color/primaryOption</item>
        <item name="colorAccent">@color/primaryOption</item>
        <item name="android:itemBackground">@color/neutral0</item>
        <item name="colorSecondaryVariant">@color/primaryOption</item>
        <item name="colorOnSecondary">@color/primaryOption</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/themeColor</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

